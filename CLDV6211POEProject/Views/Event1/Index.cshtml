@model IEnumerable<CLDV6211POEProject.Models.Event1>

@{
    ViewData["Title"] = "Event List";
}

<h1>Event List</h1>

@if (TempData["ErrorMessage"] != null)
{

    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{

    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Event_Id)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Event_Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description1)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Venue_Id)
			</th>
            <th>
                @Html.DisplayNameFor(model => model.Event_Date)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event_Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description1)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Venue_Id)
				</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event_Date)
                </td>            
           <td>
               <a asp-action="Edit" asp-route-id="@item.Event_Id">Edit</a>
               <a asp-action="Details" asp-route-id="@item.Event_Id">Details</a>
               <a asp-action="Delete" asp-route-id="@item.Event_Id">Delete</a>
           </td>
        </tr>
}
    </tbody>
</table>
