@model IEnumerable<CLDV6211POEProject.Models.Event1>

@{
    ViewData["Title"] = "Event List";
}

<h1>Event List</h1>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <label>Event Type</label>
            <select name="searchType" class="form-control">
                <option value="">- All Types --</option>
                @foreach (var type in (List<EventType>)ViewData["EventType"])
                {
                    <option value="@type.Name">@type.Name</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label>Venue</label>
            <select name="venue_Id" class="form-control">
                <option value="">- All Venues --</option>
                @foreach (var venue in (List<Venue1>)ViewData["Venue"])
                {
                    <option value="@venue.VenueID">@venue.Venue_Name</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label>Start Date</label>
            <input type="date" name="startDate" class="form-control"/>
        </div>
        <div class="col-md-3">
            <label>End Date</label>
            <input type="date" name="endDate" class="form-control" />
        </div>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn-primary">Filter</button>
        <a href="/Event1/Index" class="btn btn-secondary ml-2">Clear</a>
    </div>
    

</form>

@if (TempData["ErrorMessage"] != null)
{

    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{

    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.EventID)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Event_Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description1)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.VenueID)
			</th>
            <th>
                @Html.DisplayNameFor(model => model.Event_Date)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event_Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description1)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.VenueID)
				</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event_Date)
                </td>            
           <td>
               <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a>
               <a asp-action="Details" asp-route-id="@item.EventID">Details</a>
               <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
           </td>
        </tr>
}
    </tbody>
</table>
