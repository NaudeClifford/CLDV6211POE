@model CLDV6211POEProject.Models.Bookings1

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bookings1</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventID" class="control-label"></label>
                <select asp-for="EventID" class="form-control">
                    <option value="">- Select Event --</option>
                        @foreach (var @event1 in ViewBag.Event)
                        {
                            <option value="@event1.EventID">@event1.Event_Name</option>
                        }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="VenueID" class="control-label"></label>
                <select asp-for="VenueID" class="form-control">
                    <option value="">- Select Venue --</option>
                        @foreach (var @venue1 in ViewBag.Venue)
                        {
                            <option value="@venue1.VenueID">@venue1.Venue_Name</option>
                        }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Booking_Date" class="control-label"></label>
                <input asp-for="Booking_Date" class="form-control" />
                <span asp-validation-for="Booking_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
